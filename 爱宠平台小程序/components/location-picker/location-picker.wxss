/* components/location-picker/location-picker.wxss */

.location-picker {
  position: relative;
}

/* 触发器样式 */
.location-trigger {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: var(--background-color, #f5f5f5);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: border-color 0.3s ease;
}

.location-trigger:active {
  border-color: var(--primary-color, #FF8C00);
  background-color: var(--white, #ffffff);
}

.location-text {
  color: var(--text-color, #333);
}

.placeholder-text {
  color: var(--text-lighter, #999);
}

/* 弹窗样式 */
.location-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 标题栏 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color, #eee);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color, #333);
}

.close-btn {
  padding: 8rpx;
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: var(--background-color, #f5f5f5);
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color, #333);
}

/* 快捷选项 */
.quick-options {
  padding: 0 32rpx 24rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  gap: 24rpx;
  border-bottom: 1rpx solid var(--border-color, #eee);
}

.option-item:last-child {
  border-bottom: none;
}

.option-content {
  flex: 1;
}

.option-title {
  display: block;
  font-size: 28rpx;
  color: var(--text-color, #333);
  font-weight: 500;
  margin-bottom: 8rpx;
}

.option-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-lighter, #999);
}

/* 搜索结果 */
.search-results {
  flex: 1;
  min-height: 0;
  padding: 0 32rpx 32rpx;
}

.results-title {
  font-size: 26rpx;
  color: var(--text-lighter, #999);
  margin-bottom: 16rpx;
}

.results-list {
  max-height: 400rpx;
}

.result-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  gap: 16rpx;
  border-bottom: 1rpx solid var(--border-color, #eee);
}

.result-item:last-child {
  border-bottom: none;
}

.result-content {
  flex: 1;
}

.result-name {
  display: block;
  font-size: 28rpx;
  color: var(--text-color, #333);
  margin-bottom: 8rpx;
}

.result-address {
  display: block;
  font-size: 24rpx;
  color: var(--text-lighter, #999);
}

/* 加载状态 */
.loading-state {
  padding: 40rpx;
  text-align: center;
  color: var(--text-lighter, #999);
  font-size: 26rpx;
}

/* 手动输入弹窗 */
.manual-input-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
}

.manual-input-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: white;
  border-radius: 16rpx;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.input-section {
  padding: 32rpx;
}

.address-input {
  width: 100%;
  min-height: 120rpx;
  background-color: var(--background-color, #f5f5f5);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: var(--text-color, #333);
  box-sizing: border-box;
}

.button-section {
  display: flex;
  border-top: 1rpx solid var(--border-color, #eee);
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  padding: 32rpx;
  font-size: 28rpx;
  border: none;
  background-color: transparent;
  border-radius: 0;
}

.cancel-btn {
  color: var(--text-lighter, #999);
  border-right: 1rpx solid var(--border-color, #eee);
}

.confirm-btn {
  color: var(--primary-color, #FF8C00);
  font-weight: 600;
}

.cancel-btn::after,
.confirm-btn::after {
  border: none;
}
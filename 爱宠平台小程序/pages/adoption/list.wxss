/* pages/adoption/list.wxss */

.page-container {
  background-color: var(--background-color);
  padding-bottom: 40rpx;
}

/* 页面头部 */
.header-section {
  background: linear-gradient(135deg, var(--secondary-color), #87ceeb);
  padding: 60rpx 40rpx 40rpx;
  color: var(--white);
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 收养列表 */
.adoption-container {
  padding: 20rpx;
}

.adoption-item {
  background-color: var(--white);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 宠物图片 */
.pet-images {
  position: relative;
  height: 400rpx;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.pet-image {
  width: 100%;
  height: 100%;
}

.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-tag.pending {
  background-color: rgba(82, 196, 26, 0.9);
  color: var(--white);
}

.status-tag.adopted {
  background-color: rgba(0, 0, 0, 0.6);
  color: var(--white);
}

/* 宠物信息 */
.pet-info {
  padding: 32rpx;
}

.pet-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 20rpx;
  display: block;
}

.pet-details {
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.detail-label {
  width: 120rpx;
  font-size: 26rpx;
  color: var(--text-light);
  flex-shrink: 0;
}

.detail-value {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-color);
  font-weight: 500;
}

.pet-description {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: block;
}

/* 发布者信息 */
.publisher-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid var(--border-color);
  border-bottom: 1rpx solid var(--border-color);
  margin-bottom: 24rpx;
}

.publisher-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.publisher-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.publisher-name {
  font-size: 26rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-bottom: 4rpx;
}

.publish-time {
  font-size: 22rpx;
  color: var(--text-lighter);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
}

.action-btn.primary {
  background-color: var(--secondary-color);
  color: var(--white);
}

.action-btn.secondary {
  background-color: var(--background-color);
  color: var(--text-light);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-light);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-lighter);
  margin-bottom: 40rpx;
}

.empty-btn {
  background-color: var(--secondary-color);
  color: var(--white);
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

/* 救助站信息 */
.rescue-section {
  background-color: var(--white);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 24rpx;
  display: block;
}

.rescue-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.rescue-item:last-child {
  border-bottom: none;
}

.rescue-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.rescue-name {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-bottom: 8rpx;
}

.rescue-address {
  font-size: 24rpx;
  color: var(--text-light);
}

.rescue-contact {
  background-color: var(--primary-color);
  color: var(--white);
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* 申请弹窗 */
.apply-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.apply-content {
  background-color: var(--white);
  border-radius: 20rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
}

.apply-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 0;
}

.apply-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.apply-close {
  color: var(--text-lighter);
}

.apply-form {
  padding: 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: var(--text-color);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input,
.form-textarea {
  width: 100%;
  background-color: var(--background-color);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.form-textarea {
  min-height: 120rpx;
  resize: none;
}

.apply-actions {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 32rpx;
}

.apply-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.apply-btn.primary {
  background-color: var(--secondary-color);
  color: var(--white);
}

.apply-btn.secondary {
  background-color: var(--background-color);
  color: var(--text-light);
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  color: var(--text-lighter);
  font-size: 28rpx;
}
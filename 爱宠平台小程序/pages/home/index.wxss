/* pages/home/index.wxss */

.page-container {
  padding-bottom: 120rpx;
}

/* 搜索栏样式 */
.search-container {
  background-color: var(--white);
  padding: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.search-box {
  display: flex;
  align-items: center;
  background-color: var(--background-color);
  border-radius: 50rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.search-icon {
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.search-btn {
  background-color: var(--primary-color);
  color: var(--white);
  padding: 12rpx 24rpx;
  border-radius: 36rpx;
  font-size: 24rpx;
  margin-left: 16rpx;
}

/* 筛选栏样式 */
.filter-container {
  background-color: var(--white);
  border-bottom: 1rpx solid var(--border-color);
}

.filter-scroll {
  white-space: nowrap;
  padding: 20rpx 0;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin: 0 10rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--text-light);
  background-color: var(--background-color);
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: var(--primary-color);
  color: var(--white);
}

.filter-item:first-child {
  margin-left: 20rpx;
}

.filter-item:last-child {
  margin-right: 20rpx;
}

/* 帖子列表样式 */
.posts-container {
  padding: 0 20rpx;
}

.post-item {
  margin-bottom: 20rpx;
}

.post-card {
  background-color: var(--white);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 4rpx;
}

.post-time {
  font-size: 22rpx;
  color: var(--text-lighter);
}

.post-type-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.post-type-tag.lost {
  background-color: rgba(245, 34, 45, 0.1);
  color: #f5222d;
}

.post-type-tag.found {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.post-type-tag.foster,
.post-type-tag.breed {
  background-color: rgba(255, 140, 0, 0.1);
  color: var(--primary-color);
}

.post-type-tag.adopt {
  background-color: rgba(77, 182, 255, 0.1);
  color: var(--secondary-color);
}

/* 帖子内容 */
.post-content {
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: block;
}

.post-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.meta-item {
  font-size: 24rpx;
  color: var(--text-light);
  background-color: var(--background-color);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 帖子图片 */
.post-images {
  position: relative;
  margin-bottom: 20rpx;
}

.post-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.image-count {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: var(--white);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

/* 操作栏 */
.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--border-color);
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: var(--text-light);
  transition: all 0.3s ease;
}

.action-item:active {
  background-color: var(--background-color);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-light);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-lighter);
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
  font-size: 28rpx;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 0, 0.3);
  z-index: 100;
}

.fab:active {
  transform: scale(0.95);
}
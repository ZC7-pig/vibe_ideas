/* pages/post/edit.wxss */

.page-container {
  padding-bottom: 120rpx;
}

/* 类型选择器 */
.type-selector {
  background-color: var(--white);
  border-bottom: 1rpx solid var(--border-color);
  padding: 20rpx 0;
}

.type-scroll {
  white-space: nowrap;
}

.type-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  margin: 0 10rpx;
  border-radius: 16rpx;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.type-item.active {
  background-color: var(--primary-color);
  color: var(--white);
}

.type-item:first-child {
  margin-left: 20rpx;
}

.type-item:last-child {
  margin-right: 20rpx;
}

.type-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.type-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 表单容器 */
.form-container {
  padding: 20rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 12rpx;
  font-weight: 500;
}

/* 优化后的输入框样式 */
.input-field {
  background-color: var(--white);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  border: 2rpx solid var(--border-color);
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-field:focus {
  border-color: var(--primary-color);
  background-color: var(--white);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.15);
}

.textarea-field {
  min-height: 160rpx;
  resize: none;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: var(--text-lighter);
  margin-top: 8rpx;
}

/* 优化后的选择器样式 */
.picker-field {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: var(--white);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  border: 2rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.picker-field:active {
  border-color: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.15);
}

.picker-field .placeholder {
  color: var(--text-lighter);
}

/* 地点选择 */
.location-field {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: var(--white);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  border: 2rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.location-field .placeholder {
  color: var(--text-lighter);
}

/* 单选框样式 */
.radio-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  padding: 16rpx;
  background-color: var(--white);
  border-radius: 8rpx;
  border: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.radio-item:hover {
  background-color: #f8f9fa;
}

.radio-item radio {
  margin-right: 16rpx;
}

/* 图片上传 */
.image-upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  border: 2rpx solid var(--border-color);
}

.image-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed var(--primary-color);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: var(--white);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.image-upload-btn:active {
  background-color: #f8f9fa;
  border-color: var(--primary-color);
}

.upload-text {
  font-size: 24rpx;
  color: var(--primary-color);
  margin-top: 8rpx;
  font-weight: 500;
}

/* 提交按钮 */
.submit-container {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

/* 占位文本 */
.placeholder {
  color: var(--text-lighter);
}
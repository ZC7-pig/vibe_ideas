/* pages/services/index.wxss */

.page-container {
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 页面头部 */
.header-section {
  background: linear-gradient(135deg, var(--primary-color), #ffb347);
  padding: 60rpx 40rpx 40rpx;
  color: var(--white);
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 服务分类 */
.services-container {
  padding: 20rpx;
}

.service-item {
  background-color: var(--white);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.service-item:active {
  transform: scale(0.98);
  background-color: var(--background-color);
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, var(--primary-color), #ffb347);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.icon-text {
  font-size: 32rpx;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.service-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: var(--text-light);
  line-height: 1.4;
}

.service-arrow {
  opacity: 0.5;
}

/* 推荐服务 */
.recommend-section {
  background-color: var(--white);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 24rpx;
  display: block;
}

.recommend-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.recommend-item:last-child {
  border-bottom: none;
}

.recommend-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.recommend-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.recommend-name {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-bottom: 8rpx;
}

.recommend-address {
  font-size: 24rpx;
  color: var(--text-light);
  margin-bottom: 8rpx;
}

.recommend-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.recommend-distance,
.recommend-rating {
  font-size: 22rpx;
  color: var(--text-lighter);
}

/* 服务提示 */
.service-tips {
  background-color: var(--white);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
}

.tips-text {
  font-size: 28rpx;
  color: var(--text-light);
  margin-bottom: 24rpx;
  display: block;
}

.tips-btn {
  background-color: var(--primary-color);
  color: var(--white);
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

/* 即将上线弹窗 */
.coming-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.coming-content {
  background-color: var(--white);
  border-radius: 20rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
}

.coming-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 0;
}

.coming-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.coming-close {
  color: var(--text-lighter);
}

.coming-body {
  padding: 32rpx;
  text-align: center;
}

.coming-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.coming-message {
  font-size: 32rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.coming-desc {
  font-size: 26rpx;
  color: var(--text-light);
  line-height: 1.5;
  margin-bottom: 32rpx;
  display: block;
}

.coming-actions {
  padding: 0 32rpx 32rpx;
}

.coming-btn {
  width: 100%;
  height: 72rpx;
  background-color: var(--primary-color);
  color: var(--white);
  border: none;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
}
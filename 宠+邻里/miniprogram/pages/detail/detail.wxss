/* 详情页面样式 */
.detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 帖子头部 */
.post-header {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.author-details {
  flex: 1;
}

.author-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-type {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  margin-left: auto;
}

.post-type.lost {
  background: #ff6b6b;
}

.post-type.found {
  background: #51cf66;
}

.post-type.adoption {
  background: #339af0;
}

.post-type.normal {
  background: #868e96;
}

/* 帖子内容 */
.post-content {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.post-description {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 图片轮播 */
.image-carousel {
  margin: 20rpx 0;
}

.carousel-container {
  position: relative;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.carousel-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-indicator {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 宠物信息 */
.pet-info {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.pet-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.pet-tag {
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #495057;
}

.pet-details {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.pet-detail-item {
  display: flex;
  align-items: center;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
  min-width: 120rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 位置信息 */
.location-info {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.location-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.location-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.distance-text {
  font-size: 28rpx;
  color: #339af0;
  font-weight: 500;
}

/* 过期信息 */
.expiration-info {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.expiration-warning {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.warning-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.warning-text {
  font-size: 28rpx;
  color: #856404;
}

.expiration-expired {
  background: #f8d7da;
  border-color: #f5c6cb;
}

.expiration-expired .warning-text {
  color: #721c24;
}

/* 操作按钮 */
.action-buttons {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
}

.like-btn {
  background: #f8f9fa;
  color: #495057;
  border: 2rpx solid #dee2e6;
}

.like-btn.liked {
  background: #ff6b6b;
  color: white;
  border-color: #ff6b6b;
}

.contact-btn {
  background: #339af0;
  color: white;
}

.like-count {
  margin-left: 8rpx;
  font-size: 24rpx;
}

/* 相似帖子 */
.similar-posts {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.similar-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.similar-item {
  display: flex;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.similar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.similar-content {
  flex: 1;
}

.similar-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.similar-info {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.similar-time {
  font-size: 24rpx;
  color: #999;
}

/* 评论区 */
.comments-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.comment-input {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.comment-textarea {
  flex: 1;
  min-height: 80rpx;
  font-size: 28rpx;
  background: transparent;
  border: none;
}

.comment-submit {
  padding: 16rpx 24rpx;
  background: #339af0;
  color: white;
  border-radius: 20rpx;
  font-size: 26rpx;
  margin-left: 16rpx;
}

.comment-submit:disabled {
  background: #dee2e6;
  color: #6c757d;
}

.comments-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.comment-content {
  flex: 1;
}

.comment-author {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.load-more-comments {
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: #666;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: white;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: white;
  padding: 60rpx;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.retry-btn {
  padding: 20rpx 40rpx;
  background: #339af0;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 空状态 */
.empty-comments {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .pet-details {
    grid-template-columns: 1fr;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-btn {
    margin-bottom: 16rpx;
  }
}
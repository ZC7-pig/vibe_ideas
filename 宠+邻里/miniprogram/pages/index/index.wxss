/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #f0f0f0;
}

.search-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background-color: #f8f8f8;
  border-radius: 50rpx;
}

.search-placeholder {
  color: #999999;
  font-size: 28rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background-color: #ffffff;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  transition: color 0.3s ease;
}

.tab-item.active {
  color: #07c160;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 帖子列表 */
.posts-list {
  flex: 1;
  padding: 20rpx;
}

.post-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
}

.author-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.author-details {
  display: flex;
  flex-direction: column;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999999;
}

.post-type-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.tag-lost {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.tag-found {
  background-color: #f6ffed;
  color: #52c41a;
}

.tag-adoption {
  background-color: #e7f4ff;
  color: #1890ff;
}

.tag-normal {
  background-color: #f0f0f0;
  color: #666666;
}

/* 帖子内容 */
.post-content {
  padding: 0 24rpx 16rpx;
}

.post-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.post-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.pet-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.location-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 26rpx;
  color: #666666;
  flex: 1;
}

.distance-text {
  font-size: 24rpx;
  color: #999999;
}

/* 帖子图片 */
.post-images {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx 16rpx;
  gap: 8rpx;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.post-image.single {
  width: 300rpx;
  height: 300rpx;
}

/* 帖子底部 */
.post-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx 24rpx;
  border-top: 2rpx solid #f8f8f8;
}

.post-actions {
  display: flex;
  align-items: center;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f8f8f8;
  transition: background-color 0.3s ease;
}

.action-item:active {
  background-color: #e8e8e8;
}

.action-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
}

.expire-info {
  display: flex;
  align-items: center;
}

.expire-text {
  font-size: 24rpx;
  color: #fa8c16;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #cccccc;
  font-size: 24rpx;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.3);
  z-index: 999;
  transition: transform 0.3s ease;
}

.fab:active {
  transform: scale(0.95);
}

.fab-icon {
  width: 48rpx;
  height: 48rpx;
}
/* 消息页面样式 */
.messages-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 60rpx;
  background: white;
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.prompt-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.login-btn {
  padding: 20rpx 60rpx;
  background: #339af0;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
}

/* 消息类型切换 */
.message-tabs {
  display: flex;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  position: relative;
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #339af0;
  border-bottom-color: #339af0;
  font-weight: 500;
}

.unread-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ff6b6b;
  color: white;
  font-size: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  line-height: 1;
}

/* 消息列表 */
.messages-list {
  height: calc(100vh - 120rpx);
  background: white;
}

.message-items {
  padding: 0 30rpx;
}

.message-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f8f9fa;
  position: relative;
  transition: background-color 0.2s ease;
}

.message-item:last-child {
  border-bottom: none;
}

.message-item.unread {
  background: #f8f9ff;
}

.message-item:active {
  background: #f0f0f0;
}

/* 消息图标 */
.message-icon {
  margin-right: 24rpx;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.system-icon {
  background: #e3f2fd;
}

.match-icon {
  background: #f3e5f5;
}

.comment-icon {
  background: #e8f5e8;
}

.like-icon {
  background: #ffebee;
}

/* 消息内容 */
.message-content {
  flex: 1;
  min-width: 0;
}

.message-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

/* 未读标识 */
.unread-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ff6b6b;
  border-radius: 50%;
  margin-left: 20rpx;
  flex-shrink: 0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #339af0;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  text-align: center;
}

/* 加载更多 */
.load-more {
  padding: 30rpx;
  text-align: center;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.load-more-btn {
  padding: 20rpx 40rpx;
  background: #f8f9fa;
  color: #666;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: inline-block;
}

.no-more {
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

/* 全部标记为已读 */
.mark-all-read {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  z-index: 100;
}

.mark-read-btn {
  padding: 20rpx 30rpx;
  background: #339af0;
  color: white;
  border-radius: 40rpx;
  font-size: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(51, 154, 240, 0.3);
}

/* 消息详情弹窗 */
.message-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 60rpx;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  margin-left: 20rpx;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.message-detail-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.message-data {
  margin-bottom: 30rpx;
}

.matched-post,
.comment-post {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.matched-title,
.comment-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.matched-info,
.comment-info {
  padding-left: 20rpx;
}

.matched-post-title,
.comment-post-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.matched-post-type {
  font-size: 24rpx;
  color: #666;
}

.message-detail-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.view-post-btn {
  flex: 1;
  padding: 20rpx;
  background: #339af0;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.close-btn {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  color: #666;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .message-tabs {
    font-size: 28rpx;
  }
  
  .tab-item {
    padding: 24rpx 16rpx;
  }
  
  .modal-content {
    margin: 40rpx 20rpx;
  }
}
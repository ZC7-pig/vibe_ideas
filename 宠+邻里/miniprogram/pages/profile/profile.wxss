/* 个人中心页面样式 */
.profile-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: white;
  padding: 60rpx;
}

.login-avatar {
  margin-bottom: 40rpx;
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.login-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 60rpx;
  font-weight: 500;
}

.login-btn {
  padding: 24rpx 80rpx;
  background: #07c160;
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 用户信息 */
.user-info {
  background: white;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.user-avatar {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.user-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #339af0;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.edit-profile {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 50%;
}

.edit-icon {
  font-size: 28rpx;
}

/* 快捷操作 */
.quick-actions {
  background: white;
  margin-bottom: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f8f9fa;
  transition: background-color 0.2s ease;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background: #f8f9fa;
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.action-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.action-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 我的帖子预览 */
.my-posts-preview {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #339af0;
}

.posts-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.post-card {
  border-radius: 12rpx;
  overflow: hidden;
  background: #f8f9fa;
  transition: transform 0.2s ease;
}

.post-card:active {
  transform: scale(0.98);
}

.post-image {
  height: 200rpx;
  position: relative;
  overflow: hidden;
}

.post-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.no-image {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e9ecef;
  font-size: 48rpx;
  color: #adb5bd;
}

.post-info {
  padding: 20rpx;
}

.post-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.post-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.post-type {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
}

.post-type.lost {
  background: #ff6b6b;
}

.post-type.found {
  background: #51cf66;
}

.post-type.adoption {
  background: #339af0;
}

.post-type.normal {
  background: #868e96;
}

.post-time {
  font-size: 20rpx;
  color: #999;
}

/* 空状态 */
.empty-posts {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.publish-btn {
  padding: 20rpx 40rpx;
  background: #339af0;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 设置区域 */
.settings-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.settings-list {
  margin-top: 30rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f8f9fa;
  transition: background-color 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #f8f9fa;
}

.setting-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.setting-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.setting-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 退出登录 */
.logout-section {
  padding: 30rpx;
}

.logout-btn {
  width: 100%;
  padding: 24rpx;
  background: #ff6b6b;
  color: white;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* 编辑资料弹窗 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 60rpx;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.edit-item {
  margin-bottom: 40rpx;
}

.edit-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.edit-avatar {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #f0f0f0;
}

.edit-avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.edit-avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.edit-avatar:active .edit-avatar-overlay {
  opacity: 1;
}

.camera-icon {
  font-size: 32rpx;
  color: white;
}

.edit-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: white;
}

.edit-input:focus {
  border-color: #339af0;
}

.edit-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: white;
  resize: none;
}

.edit-textarea:focus {
  border-color: #339af0;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.cancel-btn {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  color: #666;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.save-btn {
  flex: 1;
  padding: 20rpx;
  background: #339af0;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .posts-grid {
    grid-template-columns: 1fr;
  }
  
  .user-stats {
    gap: 30rpx;
  }
  
  .modal-content {
    margin: 40rpx 20rpx;
  }
}
/* pages/publish/publish.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 区块样式 */
.section {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.section-title {
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  border-bottom: 2rpx solid #f8f8f8;
}

/* 帖子类型选择 */
.type-selector {
  padding: 24rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.type-item.active {
  border-color: #07c160;
  background-color: #f6ffed;
}

.type-item:last-child {
  margin-bottom: 0;
}

.type-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
}

.type-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.type-desc {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

/* 收养子类型选择 */
.sub-type-selector {
  display: flex;
  padding: 24rpx;
  gap: 16rpx;
}

.sub-type-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666666;
  transition: all 0.3s ease;
}

.sub-type-item.active {
  border-color: #07c160;
  background-color: #f6ffed;
  color: #07c160;
}

/* 输入组 */
.input-group {
  padding: 24rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.input-group:last-child {
  border-bottom: none;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
}

.input-label.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #ffffff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #07c160;
}

.textarea {
  min-height: 120rpx;
  resize: vertical;
}

/* 选择器样式 */
.picker {
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #ffffff;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  gap: 32rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333333;
}

.radio-item radio {
  margin-right: 12rpx;
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.image-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #ff4d4f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-delete image {
  width: 20rpx;
  height: 20rpx;
}

.image-add {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #cccccc;
  border-radius: 8rpx;
  color: #999999;
  font-size: 24rpx;
}

.image-add image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

/* 位置选择器 */
.location-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  background-color: #ffffff;
}

.location-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 联系方式提示 */
.contact-tip {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999999;
}

/* 提交区域 */
.submit-section {
  padding: 40rpx 0;
}

/* 表单验证错误 */
.input-error {
  border-color: #ff4d4f;
}

.error-message {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 通用按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  outline: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #07c160;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #06ad56;
}

.btn-secondary {
  background-color: #ffffff;
  color: #576b95;
  border: 2rpx solid #576b95;
}

.btn-secondary:active {
  background-color: #f7f7f7;
}

.btn-danger {
  background-color: #fa5151;
  color: #ffffff;
}

.btn-danger:active {
  background-color: #e64545;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 28rpx 56rpx;
  font-size: 32rpx;
}

.btn-block {
  width: 100%;
}

.btn-disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-body {
  padding: 24rpx;
}

.card-footer {
  padding: 24rpx;
  border-top: 2rpx solid #f0f0f0;
  background-color: #fafafa;
}

/* 列表样式 */
.list {
  background-color: #ffffff;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.list-item:active {
  background-color: #f7f7f7;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 28rpx;
  color: #999999;
}

.list-item-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-primary {
  background-color: #e7f4ff;
  color: #1890ff;
}

.tag-success {
  background-color: #f6ffed;
  color: #52c41a;
}

.tag-warning {
  background-color: #fff7e6;
  color: #fa8c16;
}

.tag-danger {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.tag-info {
  background-color: #f0f0f0;
  color: #666666;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
}

.input-label.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #ffffff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #1890ff;
  outline: none;
}

.input-error {
  border-color: #ff4d4f;
}

.input-error-msg {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

.textarea {
  min-height: 120rpx;
  resize: vertical;
}

/* 图片样式 */
.image {
  display: block;
  width: 100%;
  height: auto;
}

.image-round {
  border-radius: 50%;
}

.image-rounded {
  border-radius: 8rpx;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f0f0f0;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 24rpx 0;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

